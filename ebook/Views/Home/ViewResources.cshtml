@model IList<ebook.Models.Book>
@{
    ViewBag.Title = "Available Book List";
}
<h2>@ViewBag.Title.</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Book Name</th>
            <th scope="col">Book Author</th>
            <th scope="col">Price</th>
            <th scope="col">Discount</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1; }
        @foreach (var item in Model)
        {
             <tr>
                <th scope="row">@i</th>
                <td>@item.BookName</td>
                <td>@item.Author</td>
                <td>@item.Rate</td>
                <td>@item.Discount</td>
                <td>
                    <a href="@Url.Action("ViewSingleBook", "Home", new { bookId = item.BookId })">
                        View Book
                    </a>
                </td>
             </tr>
            { i++; }
        }
    </tbody>
</table>